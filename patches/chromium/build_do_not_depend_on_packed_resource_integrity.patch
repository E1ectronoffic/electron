       "//chrome/browser/apps/app_service",
       "//chrome/browser/apps/app_service:test_support",
       "//chrome/browser/enterprise/connectors/analysis:features",
@@ -7282,6 +7285,10 @@ test("unit_tests") {
     }
   }
 
+  if (!is_electron_build) {
